<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="200dp"
    android:background="@android:color/background_light"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_item_icon"
        android:contentDescription="@string/item_icon_descr"
        android:cropToPadding="true"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:src="@drawable/ic_eee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txt_item_name"
        android:elegantTextHeight="false"
        android:layout_toEndOf="@id/img_item_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_item_editor"
        android:layout_below="@+id/img_item_icon" />

</RelativeLayout>